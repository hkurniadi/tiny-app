<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/_header %>
</head>
<body>
  <% if (user) { %>
    <% userUrls.forEach((url) => { %>
      <ul>
        <li><%= `${url['shortUrl']} - ${url['website']}` %></li>
        <form method='GET' action='/urls/<%= url['shortUrl'] %>'>
          <button>Edit URL</button>
        </form>
        <form method='POST' action='/urls/<%= url['shortUrl'] %>/delete'>
          <button>Delete URL</button>
        </form>
      </ul>
    <% }); %>
  <a href='/urls/new'>Click here to shorten your URL</a>
  <% } else { %>
    <h2>Please login to see the list of shortened URLs</h2>
  <% } %>
</body>
</html>